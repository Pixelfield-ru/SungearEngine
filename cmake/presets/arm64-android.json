{
  "version": 5,
  "include": [
    "base-presets.json"
  ],
  "configurePresets": [
    {
      "inherits": "release-x64-base",
      "binaryDir": "cmake-build-release-arm64-android",
      "name": "release-arm64-android",
      "cacheVariables": {
        "SG_BUILD_PRESET": "release-arm64-android",
        "CMAKE_SYSTEM_NAME": "Android",
        "ANDROID_PLATFORM": "android-21",
        "ANDROID_ABI": "arm64-v8a",
        "VCPKG_TARGET_TRIPLET": "arm64-android-static",
        "CMAKE_SYSTEM_PROCESSOR": "arm64",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake"
      }
    },
    {
      "inherits": "debug-x64-base",
      "binaryDir": "cmake-build-debug-arm64-android",
      "name": "debug-arm64-android",
      "cacheVariables": {
        "SG_BUILD_PRESET": "debug-arm64-android",
        "CMAKE_SYSTEM_NAME": "Android",
        "ANDROID_PLATFORM": "android-21",
        "ANDROID_ABI": "arm64-v8a",
        "VCPKG_TARGET_TRIPLET": "arm64-android-static",
        "CMAKE_SYSTEM_PROCESSOR": "arm64",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake"
      }
    }
  ]
}