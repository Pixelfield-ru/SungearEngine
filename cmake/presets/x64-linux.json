{
  "version": 5,
  "include": [
    "base-presets.json"
  ],
  "configurePresets": [
    {
      "inherits": "release-x64-base",
      "binaryDir": "cmake-build-release-x64-linux",
      "name": "release-x64-linux",
      "cacheVariables": {
        "SG_BUILD_PRESET": "release-x64-linux",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_SYSTEM_NAME": "Windows",
        "VCPKG_CMAKE_SYSTEM_NAME": "Windows"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "inherits": "debug-x64-base",
      "binaryDir": "cmake-build-debug-x64-linux",
      "name": "debug-x64-linux",
      "cacheVariables": {
        "SG_BUILD_PRESET": "debug-x64-linux",
        "VCPKG_TARGET_TRIPLET": "x64-linux",
        "CMAKE_SYSTEM_NAME": "Windows",
        "VCPKG_CMAKE_SYSTEM_NAME": "Windows"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    }
  ]
}