{
  "version": 2,
  "configurePresets": [
    {
      "binaryDir": "cmake-build-release",
      "generator": "Ninja",
      "name": "release-host",
      "cacheVariables": {
        "SG_BUILD_TYPE": "Release",
        "CMAKE_BUILD_TYPE": "Release",
        "SG_BUILD_PRESET": "release-host",
        "CMAKE_TOOLCHAIN_FILE": "vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "binaryDir": "cmake-build-debug",
      "generator": "Ninja",
      "name": "debug-host",
      "cacheVariables": {
        "SG_BUILD_TYPE": "Debug",
        "CMAKE_BUILD_TYPE": "Debug",
        "SG_BUILD_PRESET": "debug-host",
        "CMAKE_TOOLCHAIN_FILE": "vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "binaryDir": "cmake-build-release-arm64-android",
      "generator": "Ninja",
      "name": "x64-arm-android-release",
      "cacheVariables": {
        "SG_BUILD_TYPE": "Release",
        "CMAKE_SYSTEM_PROCESSOR": "x64",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_SYSTEM_NAME": "Android",
        "ANDROID_PLATFORM": "android-21",
        "VCPKG_TARGET_TRIPLET": "arm64-android",
        "VCPKG_CMAKE_SYSTEM_NAME": "Android",
        "CMAKE_TOOLCHAIN_FILE": "vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "$env{ANDROID_NDK_HOME}/build/cmake/android.toolchain.cmake",
        "SG_BUILD_PRESET": "x64-arm-android-release"
      }
    },
    {
      "binaryDir": "cmake-build-release-mingw-x86-64",
      "generator": "Ninja",
      "name": "x86-64-mingw-release",
      "cacheVariables": {
        "SG_BUILD_TYPE": "Release",
        "CMAKE_SYSTEM_NAME": "MinGW",
        "CMAKE_SYSTEM_PROCESSOR": "x64",
        "CMAKE_BUILD_TYPE": "Release",
        "SG_BUILD_PRESET": "x86-64-mingw-release",

        "VCPKG_TARGET_TRIPLET": "sg-x64-mingw-dynamic-release",
        "CMAKE_TOOLCHAIN_FILE": "vcpkg/scripts/buildsystems/vcpkg.cmake"
      }
    }
  ]
}